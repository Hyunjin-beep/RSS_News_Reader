<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SettingDetails"
    tools:ignore="SpeakableTextPresentCheck">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <androidx.appcompat.widget.Toolbar
            android:id="@+id/my_toolbar_setting"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:elevation="4dp"
            android:theme="@style/ThemeOverlay.AppCompat.ActionBar"

            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="100dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_title_display"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:text="Display channels"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="57dp"
                android:layout_marginTop="50dp"
                android:text="Fin24 Tech" />

            <CheckBox
                android:id="@+id/cb_fin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="34dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/tv_cbc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="56dp"
                android:layout_marginTop="105dp"
                android:text="CBC News" />

            <CheckBox
                android:id="@+id/cb_cbc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="89dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

            <TextView
                android:id="@+id/tv_abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="52dp"
                android:layout_marginTop="158dp"
                android:text="Top 10 ABC News" />

            <CheckBox
                android:id="@+id/cb_abc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cb_fin"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="350dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_font_size"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:text="Change font size"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_font_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="64dp"

                android:layout_marginTop="78dp"
                android:text="ABCDEF - size 14" />

            <CheckBox
                android:id="@+id/cb_font_14"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/tv_font_16"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_font_14"
                android:layout_alignParentStart="true"

                android:layout_marginStart="64dp"
                android:layout_marginTop="41dp"
                android:text="ABCDEF - size 16"
                android:textSize="16sp" />

            <CheckBox
                android:id="@+id/cb_font_16"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="126dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/tv_font_18"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_font_16"
                android:layout_alignParentStart="true"

                android:layout_marginStart="64dp"
                android:layout_marginTop="45dp"
                android:text="ABCDEF - size 18"
                android:textSize="18sp" />

            <CheckBox
                android:id="@+id/cb_font_18"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="190dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />


        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="650dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_theme"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:text="Choose theme"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_theme_light"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="64dp"
                android:layout_marginTop="45dp"
                android:text="Light"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_theme_light"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="99dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/tv_theme_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="63dp"
                android:layout_marginTop="90dp"
                android:text="Dark"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cbtheme_dark"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="850dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_font_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="51dp"
                android:layout_marginTop="10dp"
                android:text="Choose font style"
                android:textColor="#3F51B5"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_font_style_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="64dp"
                android:layout_marginTop="45dp"
                android:text="Light"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_font_style_first"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="99dp"
                android:layout_marginTop="35dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />


            <TextView
                android:id="@+id/tv_font_style_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"

                android:layout_marginStart="63dp"
                android:layout_marginTop="90dp"
                android:text="Dark"
                android:textSize="14sp" />

            <CheckBox
                android:id="@+id/cb_font_stule_second"
                android:layout_width="48dp"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginTop="80dp"
                android:layout_marginEnd="66dp"
                android:minWidth="48dp"
                android:minHeight="48dp" />

        </RelativeLayout>



    </RelativeLayout>


</ScrollView>